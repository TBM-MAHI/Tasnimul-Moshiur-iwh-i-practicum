doctype html
html
  head
    title #{title}
    link(rel="stylesheet", href="/css/style.css")
  body
    h1 #{data ? "Update Deal  Object" : "Create Deal Object"}
    a(href="/deal") Return to homepage
    form(method="POST" action=data ? `/update-cobj?id=${data.id}` : "/update-cobj")
      .inputDiv
        label Deal Name:
        input(type="text" name="name" value=data ? data.properties.dealname : '')
      .inputDiv
        label Description:
        input(type="text" name="name" value=data ? data.properties.description : '')
      .inputDiv
        label Deal Stage:
        input(type="text" name="bio" value=data ? data.properties.dealstage : '')
      .inputDiv
        label Amount:
        input(type="number" name="description" value=data ? data.properties.amount : '')
      button(type="submit") #{data ? "Update" : "Create"}